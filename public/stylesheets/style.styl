temp-boxing()
  border-width 1px
  border-color #000
  border-style double

DARKGREY_COLOR = #424242
LIGHTGREY_COLOR = #B5B5B5
REDTONE_COLOR = #be2a2a
PINKTONE_COLOR = #a9646c
LIGHTBLUETONE_COLOR = #00678f
BULETONE_COLOR = #003761
WHITE_COLOR = #FFF
BACKGROUND_COLOR = #1d83a4

vendor(prop, args)
  -webkit-{prop} args
  -moz-{prop} args
  -o-{prop} args
  -ms-{prop} args
  {prop} args

border-radius()
  vendor('border-radius', arguments)

transform()
  vendor('transform', arguments)
   
@font-face
  font-family 'BebasNeueRegular'
  src url('/fonts/BebasNeue-webfont.eot')
  src url('/fonts/BebasNeue-webfont.woff') format('woff'), url('/fonts/BebasNeue-webfont.ttf') format('truetype'), url('/fonts/BebasNeue-webfont.svg#webfontYW4lu6A6') format('svg')
  font-weight normal
  font-style normal

body
  font 14px "Lucida Grande", Helvetica, Arial, sans-serif
  background-color #1d83a4

a
  text-decoration none
  color LIGHTBLUETONE_COLOR
  &:focus
  &:hover
    color REDTONE_COLOR

.clear
  clear both
   
// 헤더
#betatag
  font-size 0.4em
  font-style normal
  padding 2px 3px 0 2px
  text-decoration none
  color WHITE_COLOR
  text-shadow none
  background-color #e12e01
  top -8px
  left 0
  position relative
  border-radius 7px
  transform rotate(30deg)

.main-wrap
  padding-top 50px

// 푸터
footer
  margin-top 20px
  padding 20px 0 20px 0
  text-align center
  font-size 0.8em

footer a
  color WHITE_COLOR
  &:focus
  &:hover
    color REDTONE_COLOR

// 컨텐츠
#contents
  min-height 500px
  background-color WHITE_COLOR
  border-radius 5px
  padding-top 5px

#questionLists
  list-style none

#questionLists .question
  border-top 1px dotted #B1B1B1
  min-height 50px

#questionLists .question h3
  color DARKGREY_COLOR
  &:focus
  &:hover
    color REDTONE_COLOR

#questionLists .question .infomation
  margin-top 10px

#questionLists .question span.votecount,
#questionLists .question span.answercount
  border-radius 30px
  background-color LIGHTBLUETONE_COLOR
  text-align center
  width 45px
  height 45px
  vertical-align middle
  line-height 45px
  font-size 1em
  color WHITE_COLOR

#questionLists .question span.answercount
  background-color REDTONE_COLOR

#questionLists .question div.question-body
  margin 0 10px
  min-height 40px
   
#questionLists .question div.author
  border-left 1px solid #CCC
  padding 5px
  float right
  font-size 0.9em

#questionLists .question div.author img
  margin-right 5px

ul.tags
  font-size 0.7em
  margin-top 10px
  margin-left 50px

ul.tags li
  margin 0 5px 0 0
  float left
  & a
    color DARKGREY_COLOR

#questionLists .question time
  float right
  vertical-align bottom
  line-height 40px
  font-size 0.8em

// 글 읽기
article h3
  color DARKGREY_COLOR
  font-size 1.2em
  padding-left 10px

article .question-vote span.votecount
  border-radius 30px
  background-color LIGHTBLUETONE_COLOR
  text-align center
  width 45px
  height 45px
  vertical-align middle
  line-height 45px
  font-size 1em
  color WHITE_COLOR

article .question-vote span.voteplus,
article .question-vote span.voteminus
  border-radius 30px
  background-color BACKGROUND_COLOR
  text-align center
  width 30px
  height 30px
  vertical-align middle
  line-height 30px
  font-size 0.7em
  color WHITE_COLOR
  float left
  position relative

article .question-vote span.voteplus
  top -15px
  left -15px

article .question-vote span.voteminus
  top -45px
  left 30px

article .question-vote button
  display block
  margin-left 10px

article .question-box
  border-top 1px dotted #B1B1B1
  padding-top 10px

article .socialbox ul li
  float right

article .question-box .question-text
  padding 10px 10px 10px 20px
   
article div.author
  float right
  border-left 1px solid #CCC
  padding 5px
  margin-left 7px
   
article time
  margin-left 10px
  color DARKGREY_COLOR
  font-size 0.8em

article div.submenu
  padding-top 20px

article div.submenu ul li
  float right
  margin-right 8px

article div.comments-list
  margin-top 10px
  font-size 0.8em

article div.comment
  border-top 1px dotted #B1B1B1
  padding 5px

article div.comment div.profile
  float left
  margin-right 10px
   
article div.comment b.author
  font-size 1.1em
  margin-right 10px

article div.comment span time
  color LIGHTGREY_COLOR
  font-size 0.8em

article div.comment-write
  border-top 1px dotted #B1B1B1
  padding 5px

article div.comment-write form
  display inline

article div.comment-write textarea
  width 91%
  margin 0 auto

article div.comment-write input[type='submit']
  margin-top 5px
   
article .answer-box
  border-top 1px dotted #B1B1B1
  padding-top 5px
  margin-top 20px

article .answer-box .voting-box .answer-vote span.votecount
  border-radius 30px
  background-color LIGHTBLUETONE_COLOR
  text-align center
  width 45px
  height 45px
  vertical-align middle
  line-height 45px
  font-size 1em
  color WHITE_COLOR

article .answer-box .voting-box .answer-vote span.voteplus,
article .answer-box .voting-box .answer-vote span.voteminus
  border-radius 30px
  background-color BACKGROUND_COLOR
  text-align center
  width 30px
  height 30px
  vertical-align middle
  line-height 30px
  font-size 0.7em
  color WHITE_COLOR
  float left
  position relative

article .answer-box .voting-box .answer-vote span.voteplus
  top -15px
  left -15px

article .answer-box .voting-box .answer-vote span.voteminus
  top -45px
  left 30px

article .answer-box .voting-box .answer-vote button
  display block
  margin-left 10px

article .answer-box .socialbox
  padding-left 30px

article .answer-box .socialbox ul li
  float none
  margin-bottom 5px

article .answer-box .answer-text
  padding 10px 10px 10px 20px

article .answer-box div.author
  float right
  border-left 1px solid #CCC
  padding 5px
  margin-left 7px
   
article time
  margin-left 10px
  color DARKGREY_COLOR
  font-size 0.8em

article .answer-vote
  margin-top 10px

article .answer-vote .voting
  background-color #2DAEBF
  &:hover
    background-color #009D9A

article .answer-vote .votecount
  display block
  margin 7px 0
  text-align center
  font-size 2em
  font-weight bold
   
article .answer-write-box
  border-top 1px dotted #B1B1B1
  margin-top 20px
  margin-bottom 20px

article .answer-write
  padding 10px

article .answer-write textarea
  width 98%
  min-height 200px
  margin 0 auto
  font-size 0.9em

article .answer-write .submit-btn
  margin-top 5px

// 사이드바
aside #postBtn
  width 190px

aside .labelbox
  margin-top 5px
  float left
  width 100%
   
aside .labelbox h4
  border-top 1px solid LIGHTGREY_COLOR
  border-bottom 1px solid LIGHTGREY_COLOR
  font-size 0.9em
  margin 10px 0 10px 0
  padding 10px 0 10px 10px
  font-size 1.5em
  font-wight bolder
  color WHITE_COLOR

aside .labelbox ul
  margin 5px
  padding-left 0.7em

aside .labelbox ul li
  list-style none
  line-height 1.5em

aside .labelbox ul li a
  color LIGHTGREY_COLOR
  &:focus
  &:hover
    color REDTONE_COLOR

// 질문 작성폼
article .question-form
  padding 10px 10px 10px 30px
  margin-top 10px

article .question-form input[type=text]
  width 650px

article .question-form form #preview-box,
article .question-form form textarea
  min-height 300px
  font-size 0.9em
  width 650px

article .question-form form #preview-box
  width 635px
  border 1px solid LIGHTGREY_COLOR
  border-radius 4px
  padding 10px

// 로그인
.login
  padding-left 20px

.login ul
  margin-top 30px
  text-align center

.login ul li
  margin-bottom 30px

