temp-boxing()
   border-width 1px
   border-color #000
   border-style double

DARKGREY_COLOR = #424242   
REDTONE_COLOR = #be2a2a
PINKTONE_COLOR = #a9646c
LIGHTBLUETONE_COLOR = #00678f
BULETONE_COLOR = #003761
WHITE_COLOR = #FFF
   
vendor(prop, args)
   -webkit-{prop} args
   -moz-{prop} args
   -o-{prop} args
   -ms-{prop} args
   {prop} args

border-radius()
   vendor('border-radius', arguments)

transform()
   vendor('transform', arguments)
   
@font-face
   font-family 'BebasNeueRegular'
   src url('/fonts/BebasNeue-webfont.eot')
   src url('/fonts/BebasNeue-webfont.woff') format('woff'), url('/fonts/BebasNeue-webfont.ttf') format('truetype'), url('/fonts/BebasNeue-webfont.svg#webfontYW4lu6A6') format('svg')
   font-weight normal
   font-style normal

body
   font 14px "Lucida Grande", Helvetica, Arial, sans-serif
   background-color #efeeee
   
a
   text-decoration none
   color LIGHTBLUETONE_COLOR
   &:focus
   &:hover
      color REDTONE_COLOR
   
.clear
   clear both

// 헤더
header
   background-color DARKGREY_COLOR
   border-bottom 3px solid #CCC
   height 35px
   width 100%
   
header>div
   margin 0 auto
   width 950px
   padding 5px 10px 0 20px
   
header a
   color WHITE_COLOR

#main-logo
   font normal 1.8em 'BebasNeueRegular', Arial, sans-serif
   letter-spacing 0.04em
   padding 7px 0 0 5px
   text-shadow 0 2px 1px #707070
   display inline
   
#main-logo a:focus,
#main-logo a:hover
   color WHITE_COLOR

#betatag
   font-size 0.4em
   font-style normal
   padding 2px 3px 0 2px
   text-decoration none
   color WHITE_COLOR
   text-shadow none
   background-color #e12e01
   top -8px
   left 0
   position relative
   border-radius 7px
   transform rotate(30deg)
   
header nav
   float right

header nav ul
   list-style none
   margin-top 5px

header nav ul li
   float left
   margin-right 20px
   font normal 1em BebasNeueRegular, Arial, sans-serif
   font-weight bold
   //text-shadow 0 1px 0 WHITE_COLOR

header nav ul li a
   color: #CCC
   &:focus
   &:hover
      color WHITE_COLOR
      border-bottom-style solid
      border-bottom-color LIGHTBLUETONE_COLOR
      border-bottom-width 3px
   
#search
   float:right
   margin-right 15px

// 푸터
footer
   margin-top 20px
   padding 20px 0 20px 0
   border-top 1px solid #CCC
   text-align center
   font-size 0.8em

// 컨텐츠
#contents
   margin-top 10px
   min-height 500px

#questionLists
   list-style none

#questionLists .question
   min-height 70px
   margin-bottom 15px
   border 1px solid #CCC
   background-color #FFF

#questionLists .question h3
   background-color BULETONE_COLOR
   padding 10px
   font-size 1.2em
   margin-bottom 10px
   color WHITE_COLOR

#questionLists .question h3 .infomation
   float right
   
#questionLists .question span.viewcount,
#questionLists .question span.votecount,
#questionLists .question span.ansercount
   border-radius 30px
   background-color LIGHTBLUETONE_COLOR
   text-align center
   width 30px
   height 30px
   vertical-align middle
   line-height 30px
   font-size 0.6em
   color WHITE_COLOR
   position relative
   top -20px

#questionLists .question div.question-body
   margin 0 10px
   min-height 40px
   
#questionLists .question div.author
   border-left 1px solid #CCC
   padding 5px
   float right

ul.tags
   list-style none
   margin 10px 0 15px 5px
   padding 0
   font-size 0.8em

ul.tags li
   margin 0
   padding 0
   float left
   margin-right 3px
   padding 3px 4px
   border 1px solid #CCC
   border-radius 7px
   background-color LIGHTBLUETONE_COLOR
   & a 
      color #CCC
   & a:hover
   & a:focus
      color WHITE_COLOR

#questionLists .question time
   margin 0 0 5px 5px
   float right

// 글 읽기
article
   padding 0
   margin 0 0 15px 0
   
article h3
   background-color BULETONE_COLOR
   padding 10px
   font-size 1.2em
   margin-bottom 10px
   color WHITE_COLOR
   
article .question-box
   border 1px solid #CCC
   background-color #FFF
   
article .question-box .question-text
   padding 0 10px 10px 10px
   
article .question-box div.author
   float right
   border-left 1px solid #CCC
   padding 5px
   margin-left 7px
   
article div.author time
   //margin-left 10px

article span.votecount div
   display block

article nav
   clear both

article nav ul
   list-style none

article nav ul li
   float left
   margin-right 5px
   temp-boxing()

article div.comments-list
   margin-top 10px

article div.comment
   margin-top 10px

article div.answers-list
   margin-top 20px

article div.answer
   margin-bottom 10px
   temp-boxing()

// 사이드바
aside
   margin-top 10px
   
aside .labelbox
   margin-top 5px
   border 1px solid #CCC
   float left
   width 100%
   
aside .labelbox h4
   border 1px solid #CCC
   background-color #CCC
   font-size 0.9em
   margin 0 0 10px 0
   padding 3px

aside .labelbox ul
   margin 5px
   padding-left 0.7em

aside .labelbox ul li
   list-style none
   line-height 1.5em
   
#postBtn
   display block
   width 100%
   background-color BULETONE_COLOR
   border-radius 3px
   color WHITE_COLOR
   font-size 1.5em
   text-align center
   padding 10px 0
   
#login ul
   list-style none
   padding-left 1.5em
   
#login ul li
   float left
   margin-right 10px
   margin-bottom 10px
   