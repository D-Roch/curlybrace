body
   font 14px "Lucida Grande", Helvetica, Arial, sans-serif

// 헤더
header
   padding 5px
   min-height 50px

#main-logo
   font-size 2em

header nav ul
   list-style none

header nav ul li
   float left
   margin-right 5px
   border-width 1px
   border-color #000
   border-style double

// 푸터
footer
   min-height 50px

// 컨텐츠
#contents
   min-height 500px

#questionLists
   list-style none

#questionLists .question
   min-height 70px
   border-width 1px
   border-color #000
   border-style double
   margin-bottom 5px
   padding 5px

#questionLists .question span.viewcount,
#questionLists .question span.votecount,
#questionLists .question span.ansercount

#questionLists .question ul.tags
   list-style none
   margin 0
   padding 0

#questionLists .question ul.tags li
   margin 0
   padding 0
   float left
   border-width 1px
   border-color #000
   border-style double
   margin-right 3px
   padding 2px

#questionLists .question div.author time
   margin-left 10px

// 글 읽기
article ul.tags
   list-style none
   margin 0
   padding 0

article ul.tags li
   margin 0
   padding 0
   float left
   border-width 1px
   border-color #000
   border-style double
   margin-right 3px
   padding 2px

article span.votecount div
   display block

article nav
   clear both

article nav ul
   list-style none

article nav ul li
   float left
   margin-right 5px
   border-width 1px
   border-color #000
   border-style double

article div.author
   clear both

article div.author time
   margin-left 10px

article div.comments-list
   margin-top 10px

article div.comment
   margin-top 10px

article div.answers-list
   margin-top 20px

article div.answer
   margin-bottom 10px
   border-width 1px
   border-color #000
   border-style double

// 사이드바
#postBtn
   display block
   width 100%
   height 50px

#login
   margin-top 5px
   border-width 1px
   border-color #000
   border-style double

#login ul
   list-style none

#login ul li
   floatleft
   margin-right 5px