temp-boxing()
   border-width 1px
   border-color #000
   border-style double
   
vendor(prop, args)
   -webkit-{prop} args
   -moz-{prop} args
   -o-{prop} args
   {prop} args

border-radius()
   vendor('border-radius', arguments)

transform()
   vendor('transform', arguments)
   
@font-face
   font-family 'BebasNeueRegular'
   src url('/fonts/BebasNeue-webfont.eot')
   src url('/fonts/BebasNeue-webfont.woff') format('woff'), url('/fonts/BebasNeue-webfont.ttf') format('truetype'), url('/fonts/BebasNeue-webfont.svg#webfontYW4lu6A6') format('svg')
   font-weight normal
   font-style normal

body
   font 14px "Lucida Grande", Helvetica, Arial, sans-serif
   background url('/images/common/tophead.jpg') top repeat-x

// 헤더
header
   background url('/images/common/tophead.jpg') top repeat-x
   border-bottom 1px solid #CCC
   height 57px
   
header a
   text-decoration none
   color #424242

header a:focus,
header a:hover
   color #664444

#main-logo
   color:#424242
   font normal 2.8em BebasNeueRegular, Arial, sans-serif
   letter-spacing 0.04em
   padding 7px 0 0 5px
   text-shadow 0 1px 0 #FFF

#betatag
   font-size 0.4em
   font-style normal
   padding 5px 3px 0 5px
   text-decoration none
   color #FFF
   text-shadow none
   background-color #e12e01
   top -15px
   left -3px
   position relative
   border-radius 7px
   transform rotate(30deg)

header nav ul
   list-style none

header nav ul li
   float left
   margin-right 5px
   temp-boxing()

// 푸터
footer
   min-height 50px

// 컨텐츠
#contents
   min-height 500px

#questionLists
   list-style none

#questionLists .question
   min-height 70px
   margin-bottom 5px
   padding 5px
   temp-boxing()

#questionLists .question span.viewcount,
#questionLists .question span.votecount,
#questionLists .question span.ansercount

#questionLists .question ul.tags
   list-style none
   margin 0
   padding 0

#questionLists .question ul.tags li
   margin 0
   padding 0
   float left
   margin-right 3px
   padding 2px
   temp-boxing()

#questionLists .question div.author time
   margin-left 10px

// 글 읽기
article ul.tags
   list-style none
   margin 0
   padding 0

article ul.tags li
   margin 0
   padding 0
   float left
   margin-right 3px
   padding 2px
   temp-boxing()

article span.votecount div
   display block

article nav
   clear both

article nav ul
   list-style none

article nav ul li
   float left
   margin-right 5px
   temp-boxing()
   
article div.author
   clear both

article div.author time
   margin-left 10px

article div.comments-list
   margin-top 10px

article div.comment
   margin-top 10px

article div.answers-list
   margin-top 20px

article div.answer
   margin-bottom 10px
   temp-boxing()

// 사이드바
#postBtn
   display block
   width 100%
   height 50px

#login
   margin-top 5px
   temp-boxing()

#login ul
   list-style none

#login ul li
   floatleft
   margin-right 5px