!!!5
html
  head
    title= title
    link(rel='stylesheet', href='/bootstrap/css/bootstrap.css')
    link(rel='stylesheet', href='/stylesheets/font-awesome.css')
    block css
    link(rel='stylesheet', href='/stylesheets/style.css')
    body
      .navbar.navbar-fixed-top.navbar-inverse
        .navbar-inner
          .container
            a.brand(href="/") {curlybrace}
              #betatag alpha
            .nav-collapse.collapse.navbar-inverse-collapse
              ul.nav.unstyled.pull-right
                li
                  if !user
                    a(href='/login') Login
                  else
                    a(href='/users/#{user._id}') #{user.nickname}
              form.navbar-form.pull-right
                input.search-query(type='txt', placeholder="Search")
              ul.nav.unstyled
                li.active
                  a(href='#') 인기 질문
                li
                  a(href='#') 최근 질문
                li
                  a(href='#') 답변안된 질문
                li
                  a(href='#') 사용자
      .container-fluid.main-wrap
        .row-fluid
          #contents.span9
            block mainContent
          aside.span3
            block sidebar
              a#postBtn(href='/question/form').btn.btn-large.btn-danger
                i.icon-upload-alt.icon-white.icon-large
                |  질문하기
              #recently-questions.labelbox
                h4 최근 질문
                ul.unstyled
                  li
                    a(href='#')  질문...
                  li
                    a(href='#')  질문...
                  li
                    a(href='#')  질문...
              #recently-answers.labelbox
                 h4 최근 답변된 질문
                 ul.unstyled
                   li
                     a(href='#') 질문...
                   li
                     a(href='#')  질문...
                   li
                     a(href='#')  질문...
        footer.row
          | Copyright &copy; 2012&nbsp;
          a(href='http://sideeffect.kr/', target='_blank') Side Effect Studio
          | &nbsp;| All rights reserved | Sources hosted in&nbsp;
          a(href='https://github.com/outsideris/curlybrace', target='_blank') GitHub
      a(href='https://github.com/outsideris/curlybrace', target='_blank')
        img(style='position: absolute; top: 0; right: 0; border: 0; z-index:1050;', src='https://s3.amazonaws.com/github/ribbons/forkme_right_white_ffffff.png', alt='Fork me on GitHub')
      #fb-root
      script(type='text/javascript', src='http://code.jquery.com/jquery-1.8.3.min.js')
      script(type='text/javascript', src='/bootstrap/js/bootstrap.js')
      block scripts
      script(type='text/javascript', src='/javascripts/commons.js')
